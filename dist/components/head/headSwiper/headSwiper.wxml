<block wx:if="{{$taroCompReady}}">
    <view class="home-banner">
        <swiper class="home-banner__swiper" circular="{{true}}" autoplay="{{true}}" indicator-dots="{{true}}" indicator-active-color="rgb(100, 100, 100)">
            <swiper-item wx:key="key" class="home-banner__swiper-item" wx:for="{{img_list}}" wx:for-item="item" wx:for-index="_anonIdx2">
                <image class="home-banner__swiper-item-img" bindtap="onImageClick" src="{{item.url}}" data-e-tap-so="this" data-e-tap-a-a="{{pureUrlList}}" data-e-tap-a-b="{{item.key}}"></image>
            </swiper-item>
        </swiper>
    </view>
</block>